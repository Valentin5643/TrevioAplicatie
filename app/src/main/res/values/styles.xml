<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base button styles -->
    <style name="TrevioButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TrevioButton.Primary">
        <item name="android:backgroundTint">?attr/buttonBackgroundTint</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="iconTint">?attr/buttonTextColor</item>
    </style>

    <style name="TrevioButton.Secondary">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="TrevioButton.Accent">
        <item name="android:backgroundTint">?attr/buttonBackgroundTint</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="iconTint">?attr/buttonTextColor</item>
    </style>

    <style name="TrevioButton.IconButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="cornerRadius">24dp</item>
        <item name="android:backgroundTint">?attr/buttonBackgroundTint</item>
        <item name="iconTint">?attr/buttonTextColor</item>
    </style>

    <!-- Card styles -->
    <style name="TrevioCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">?attr/cardStrokeColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">?attr/cardBackgroundColor</item>
    </style>

    <style name="TrevioCard.NoStroke">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="TrevioCard.LowElevation">
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Text input styles -->
    <style name="TrevioInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <!-- Text styles -->
    <style name="TrevioText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TrevioText.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TrevioText.Subtitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TrevioText.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrevioText.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <!-- Number Picker style -->
    <style name="NumberPickerStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
    </style>
</resources> 