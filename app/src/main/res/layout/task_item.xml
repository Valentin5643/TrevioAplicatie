<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/quest_dark_background"
    app:strokeColor="@color/quest_card_stroke"
    app:strokeWidth="1dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBoxCompleted"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            app:buttonTint="@color/primary_light_blue"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/taskText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/quest_card_text"/>

                <ImageView
                    android:id="@+id/ivRecurringIndicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_recurring"
                    android:visibility="gone"
                    android:contentDescription="Recurring Task"
                    app:tint="@color/primary_light_blue" />
            </LinearLayout>

            <!-- Task description -->
            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/primary_light_blue"
                android:ellipsize="end"
                android:maxLines="3"
                android:visibility="visible"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/taskTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/primary_light_blue"/>

            <!-- Container for subtasks (inflated dynamically) -->
            <LinearLayout
                android:id="@+id/llSubtasksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone" 
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/taskImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="@color/primary_light_blue"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="18dp"
            app:strokeColor="@color/primary_light_blue"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:contentDescription="@string/delete_task"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>