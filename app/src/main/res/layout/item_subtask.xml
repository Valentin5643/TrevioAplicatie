<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeColor="?attr/colorPrimary"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvSubtaskDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Subtask description"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp" />

        <!-- Optional: Add a delete button for subtasks with theme-aware color tint -->
        <ImageButton
            android:id="@+id/btnDeleteSubtask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete step"
            app:tint="?attr/colorPrimary"
            android:padding="4dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
